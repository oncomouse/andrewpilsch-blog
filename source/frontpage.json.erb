<%
	require 'json'
	articles_to_show = 3
	articles = []
	if blog.articles.length < articles_to_show
		articles = blog.articles
	else
		articles = blog.articles[0,articles_to_show]
	end
%>
<%=JSON.generate(output = articles.map { |article|
		next if build? and !article.published?
		nokogiri = Nokogiri::HTML(article.body)
		next if nokogiri.at('body').nil?
		{
			url: article.url,
			title: article.title,
			summary: article.summary(250)
		}
	})%>